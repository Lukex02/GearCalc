{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "jsx": "react-native",
    "strict": true,
    "baseUrl": "./app",
    "paths": {
      "@/*": ["./*"],
      "@style/*": ["src/style/*"],
      "@views/*": ["views/*"],
      "@services/*": ["src/services/*"],
      "@models/*": ["src/models/*"],
      "@controller/*": ["src/controller/*"],
      "@img/*": ["../assets/images/*"]
    }
  },
  "include": ["**/*.ts", "**/*.tsx", ".expo/types/**/*.ts", "expo-env.d.ts", "bable.config.js"]
}
